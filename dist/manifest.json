{
  "name": "tab2image",
  "description": "Save images currently opened in tabs.",
  "version": "0.8.4",
  "manifest_version": 3,
  "minimum_chrome_version": "88",
  "permissions": [
    "downloads",
    "tabs",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "img/icon16.png"
  },
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "incognito": "split"
}
